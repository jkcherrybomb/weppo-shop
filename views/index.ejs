<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Online Shop</title>
    <%- include('../overall/layout'); %>
  </head>
  <body>
    <header><%- include('../overall/header'); %></header>
    <div class="container-fluid">
    <h1>  
      Welcome,  
      <%= firstName %> 
    </h1> 
    <h5>What do you need today?</h5>
  </div>
  

  <% products.forEach( product => { %>
      <div class="p-3">
        <div class="container-fluid" style="background-color: #e6e6fa;">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="mr-auto"> <%= product.name %></h3>
            <button type="button" class="btn btn-success me-md-2" mr-auto>Add to cart</button>
          </div>
          <h5>price: <%= product.price %></h5>
          <h5><%= product.description %></h5>
        </div>
    </div>
  <% }) %>

    
  </body>
</html>
