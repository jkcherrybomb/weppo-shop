<!-- views/search.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Search</title>
    <%- include('../overall/layout'); %>
  </head>
  <body>
    <header><%- include('../overall/header'); %></header>
    <% if (products.length > 0) { %>
    <h3>We found products related to your search!</h3>
    <% products.forEach( product => { %>
    <div class="p-3">
      <div class="container-fluid" style="background-color: #e6e6fa">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="mr-auto"><%= product.name %></h3>
          <button
            type="button"
            class="btn btn-success me-md-2"
            style="background-color: #612ee7; border-color: #612ee7"
            mr-auto
          >
            Add to cart
          </button>
        </div>
        <h5>price: <%= product.price %></h5>
        <h5><%= product.description %></h5>
      </div>
    </div>
    <% }) %> <% } else { %>
    <h3>Unfortunately we found no products related to your search</h3>
    <% } %>
  </body>
</html>
